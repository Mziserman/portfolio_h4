<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Martin Ziserman</title>
</head>
<body>
  <div id="main">
    <div class="wrapper">
      <section id="home">
        <div class="container">
          <% flash.each do |key, value| %>
            <div class="alert alert-<%= key %>"><%= value %></div>
          <% end %>
          <div class="row">
            <h1>
              Martin Ziserman
            </h1>
            <h2><a href="#" data-target="contact">contact</a></h2>
          </div>
          <div class="row">
            <p>Developer</p>
          </div>
          <section id="projects">
            <div class="projects">
              <% @projects.each do |project| %>
                <panel class="project">
                  <div class="headline">
                    <h2><%= project.name %></h2>
                    <h3><a href="<%= project.url %>">View the project</a></h3>
                  </div>
                  <div class="baseline">
                    <div class="description">
                      <h3>Description</h3>
                      <br>
                      <%= project.description %>

                      <br>
                      <br>
                      
                      <h3>Skills used</h3>
                      <% project.domains.each do |domain| %>
                        <br>
                        <h4><%= domain.name %></h4>
                        <% domain.skills.each do |skill| %>
                          <% if project.skills.include? skill %>
                            <%= skill.name %> <br>
                          <% end %>
                        <% end %>
                      <% end %>
                    </div><!-- 
                    <div class="picture_container">
                      <%= image_tag(project.picture) %>
                    </div>
-->                    </div>
                </panel>
              <% end %>
            </div>
          </section>
        </div>
      </section>
      <section id="contact">
        <div class="container">
          <%= form_for @offer, url: {action: :create_offer} do |f| %>
            <%= f.label :title %>
            <br>
            <%= f.text_field :title %>
            
            <br><br>

            <%= f.label :entreprise %>
            <br>
            <%= f.text_field :entreprise %>
            
            <br><br>

            <%= f.label :url %>
            <br>
            <%= f.text_field :url %>
            
            <br><br>

            <%= f.label :message %>
            <br>
            <%= f.text_area :message, :style => 'width: 100%; height: 150px; padding: 6px 12px; margin: 8px 0;' %>
            
            <br><br>

            <%= f.button "Submit" -%>
          <% end %>
        </div>
      </section>
    </div>
  </div>

  <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/plugins/CSSPlugin.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/easing/EasePack.min.js"></script>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.19.0/TweenLite.min.js"></script>
  
</body>
</html>